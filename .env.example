# OCI Configuration
# Get these values from Oracle Cloud Console

# Tenancy OCID (from Administration > Tenancy Details)
OCI_TENANCY_OCID=ocid1.tenancy.oc1..xxxxx

# User OCID (from Identity > Users > Your User)
OCI_USER_OCID=ocid1.user.oc1..xxxxx

# API Key Fingerprint (from User > API Keys)
OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx

# Private Key Content (paste the entire key, replace newlines with \n)
# Example: -----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----
OCI_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# Region (e.g., us-ashburn-1, us-phoenix-1)
OCI_REGION=us-ashburn-1

# Compartment OCID (usually same as tenancy for free tier)
OCI_COMPARTMENT_ID=ocid1.tenancy.oc1..xxxxx

# Subnet OCID (from Networking > Virtual Cloud Networks > Your VCN > Subnets)
OCI_SUBNET_ID=ocid1.subnet.oc1.iad.xxxxx

# Image OCID for Ubuntu 24.04 ARM in Ashburn
OCI_IMAGE_ID=ocid1.image.oc1.iad.aaaaaaaaawgpyvs3zh7tu5343gpj45yqcj6hosrmrgvo5xovc7dvjwgi4vaq

# SSH Public Key (the full public key content)
OCI_SSH_PUBLIC_KEY=ssh-ed25519 AAAA... your-email@example.com

# VM Configuration
OCI_VM_DISPLAY_NAME=ubuntu-arm-free
OCI_OCPUS=4
OCI_MEMORY_GBS=24

# Retry interval in seconds (default: 60)
OCI_RETRY_INTERVAL=60
